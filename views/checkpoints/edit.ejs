<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Edit Checkpoint</h1>
	<div class="col-6 offset-3">
		<form action="/checkpoints/<%= checkpoint._id %>?_method=PATCH" method="POST" class="validated-form" novalidate>
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					name="checkpoint[title]"
					id="title"
					value="<%= checkpoint.title %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					name="checkpoint[location]"
					id="location"
					value="<%= checkpoint.location %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input
					class="form-control"
					type="text"
					name="checkpoint[image]"
					id="image"
					value="<%= checkpoint.image %>"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="price">Checkpoint Price</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="text"
						class="form-control"
						id="price"
						placeholder="0.00"
						aria-label="price"
						aria-describedby="price-label"
						name="checkpoint[price]"
						value="<%= checkpoint.price %>"
						required
					/>
					<div class="valid-feedback">Looks good!</div>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" name="checkpoint[description]" id="description" required>
<%= checkpoint.description %></textarea
				>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<button class="btn btn-info">Save Checkpoint</button>
			</div>
		</form>
		<a href="/checkpoints/<%= checkpoint._id %>">Back To Checkpoint</a>
	</div>
</div>
